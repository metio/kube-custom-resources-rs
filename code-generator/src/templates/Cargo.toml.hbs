[package]
name = "kcr_{{group_name_snake_case}}"
version = "0.0.0"
edition.workspace = true
authors.workspace = true
description.workspace = true
homepage.workspace = true
readme = "README.md"
keywords.workspace = true
categories.workspace = true
license.workspace = true
repository.workspace = true

[dependencies]
schemars = { version = "~0" }
serde = { version = "~1" }
serde_json = { version = "~1" }
k8s-openapi = { version = "~0" }
kube = { version = "~{{kube_rs_major_version}}", default-features = false, features = ["derive"] }

[dev-dependencies]
k8s-openapi = { version = "~0", features = ["{{k8s_openapi_kubernetes_version}}"] }

[package.metadata.docs.rs]
features = ["k8s-openapi/{{k8s_openapi_kubernetes_version}}"]

[features]
default = [{{#each versions as |version| }}"{{version}}"{{#unless @last}}, {{/unless}}{{/each}}]
{{#each versions as |version| }}
{{version}} = []
{{/each}}
