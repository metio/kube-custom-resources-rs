[package]
name = "kcr_{{group_name_snake_case}}"
version = "9999.99.99"
edition = "2021"
authors = ["The kube-custom-resources-rs authors"]
description = "Kubernetes Custom Resource Bindings"
homepage = "https://github.com/metio/kube-custom-resources-rs/"
readme = "../../README.md"
keywords = ["kubernetes", "custom-resources"]
categories = ["api-bindings"]
license = "0BSD"
repository = "https://github.com/metio/kube-custom-resources-rs"

[dependencies]
schemars = { version = "~0" }
serde = { version = "~1" }
serde_json = { version = "~1" }
k8s-openapi = { version = "~0" }
kube = { version = "~0", features = ["derive"] }

[dev-dependencies]
k8s-openapi = { version = "~0", features = ["{{k8s_openapi_kubernetes_version}}"] }

[package.metadata.docs.rs]
features = ["k8s-openapi/{{k8s_openapi_kubernetes_version}}"]
